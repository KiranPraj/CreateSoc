<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.icspl.kartik.Activity.loginActivity">
    <com.icspl.createsoc.CustomTextField.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_gravity="center"
    android:orientation="vertical">

  <ImageView
android:layout_marginTop="60dp"
      android:layout_width="70dp"
      android:layout_gravity="center"
      android:layout_height="70dp"
      android:background="@drawable/ic_person_black_24dp"
      android:layout_marginBottom="25dp"


      />
    <Spinner
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center"

        android:entries="@array/spin">

    </Spinner>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:hint="@string/username"
        app:hintEnabled="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="vaishali.patil@icsasian.com"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:hint="@string/password"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:text="31891"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow"
        android:elevation="2dp"
        android:id="@+id/login"
        android:layout_marginTop="8dp"
        android:background="#0FC0AD"

        />
<com.icspl.createsoc.CustomTextField.MyTextView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="FORGOT PASSWORD..?"
    android:textColor="#0FC0AD"
    android:layout_gravity="center"

    />




</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"

        >

        <com.icspl.createsoc.CustomTextField.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="International Certification Services Pvt.Ltd."
            android:gravity="end"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>


</LinearLayout>
