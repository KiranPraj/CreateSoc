            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btntwo"
            android:orientation="horizontal"
            android:padding="10dp">


            <com.icspl.createsoc.CustomTextField.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"

                android:text="ENTER NO OTHER DOCUMENTS:-"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.icspl.createsoc.CustomTextField.MyEditText
                android:id="@+id/et_addrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="#000000" />

        </LinearLayout>

        <com.icspl.createsoc.CustomTextField.MyTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#000000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_Savesocdetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/save"
            android:text="SAVE"
            android:textColor="#ffffff" />
