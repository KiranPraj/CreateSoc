            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btntwo"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.icspl.createsoc.CustomTextField.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="SOC. NAME:-"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.icspl.createsoc.CustomTextField.MyTextView
                    android:id="@+id/tv_socname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="XYZ SOCIETY"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_namedoc"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn3"
                    android:drawableLeft="@drawable/ic_attach_file_black_24dp"
                    android:paddingLeft="10dp"
                    android:text="DOCUMENTS"

                    />

                <Button
                    android:id="@+id/btn_namecam"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn3"
                    android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                    android:paddingLeft="10dp"
                    android:text="CLICK PHOTO"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btntwo"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.icspl.createsoc.CustomTextField.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="SOC.ADDRESS:-"

                    android:textColor="#000000"
                    android:textSize="16sp" />

                <com.icspl.createsoc.CustomTextField.MyEditText
                    android:id="@+id/et_socadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="ENTER HERE"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_socadddoc"
                    android:layout_width="0dp"
