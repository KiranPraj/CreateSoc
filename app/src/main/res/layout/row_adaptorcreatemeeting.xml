<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:padding="15dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.icspl.createsoc.CustomTextField.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEETING DISCRIPTION:-"
            android:textColor="#000000"
            android:textSize="16sp"
            />
<com.icspl.createsoc.CustomTextField.MyEditText
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hint="PLEASE ENTER MEETING TITLE OR DISCRIPPTION"
    android:id="@+id/et_discription"
    android:textSize="12sp"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <com.icspl.createsoc.CustomTextField.MyTextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="MEETING DATE:-"
                android:textColor="#000000"
                android:textSize="16sp"

                />

            <com.icspl.createsoc.CustomTextField.MyTextView
                android:id="@+id/tv_meetingdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:hint="DD/MM/YYYY"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"

                />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>