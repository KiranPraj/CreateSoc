<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0FC0AD" />
            <!-- A numeric value is specified in "radius" for demonstrative purposes only,
                  it should be @dimen/val_name -->
            <corners />
        </shape>
    </item>
    <!-- To keep the TOP-LEFT corner UNROUNDED set both OPPOSITE offsets (bottom+right): -->
    <item
        android:bottom="200dp"
        >
        <shape android:shape="rectangle" android:innerRadius="50dp">
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp"  />
            <stroke android:color="#0FC0AD" android:width="5dp"/>
            <solid android:color="#F6F7F2" />
        </shape>
    </item>
</layer-list>